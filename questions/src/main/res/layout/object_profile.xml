<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical|right"
    android:background="@color/colorcardbg"
    android:orientation="horizontal"
    tools:ignore="RtlHardcoded">


    <carbon.widget.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:carbon_fontPath="@string/iransans"
        android:gravity="right"
        android:id="@+id/title"
        android:text="ُTextView" />

    <ir.protech21.headsUp.widget.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        app:border_color="@color/colorgold"
        android:id="@+id/image"
        app:border_width="2dp"
        android:src="@drawable/ic_logo"
        app:civ_border_color="@color/colorgold"
        app:civ_border_width="2dp"
        app:civ_circle_background_color="@color/colorBGMain" />

</carbon.widget.LinearLayout>