<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark">

    <carbon.widget.LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <carbon.widget.Button
            android:id="@+id/back"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="center|start"
            android:clickable="true"
            android:focusable="true"
            android:onClick="Finish"
            android:padding="8dp"
            android:src="@drawable/ic_keyboard_arrow_left_blue_24dp_light"
            app:carbon_rippleColor="@color/carbon_white" />

        <carbon.widget.TextView
            android:id="@+id/TitleView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/carbon_padding"
            android:paddingRight="@dimen/carbon_padding"
            android:text="اطلاعات تماس"
            android:textColor="@color/colorgold"
            android:textSize="@dimen/carbon_padding"
            app:carbon_fontPath="@string/iransans" />

        <carbon.widget.Button
            android:id="@+id/ok"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="center|start"
            android:background="@null"
            android:clickable="true"
            android:focusable="true"
            android:paddingLeft="@dimen/carbon_padding"
            android:paddingTop="8dp"
            android:paddingRight="@dimen/carbon_padding"
            android:paddingBottom="8dp"
            android:text="تایید"
            android:textColor="@android:color/white"
            android:visibility="gone"
            app:carbon_fontPath="@string/iransans"
            app:carbon_rippleColor="#1AFFFFFF"
            app:carbon_rippleStyle="borderless" />
    </carbon.widget.LinearLayout>
</com.google.android.material.appbar.AppBarLayout>