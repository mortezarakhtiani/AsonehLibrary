<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/stroke"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cir"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="-100dp"
        android:layout_marginTop="-70dp"
        android:layout_marginRight="-100dp"
        app:cardBackgroundColor="@color/colorBGMain"
        app:cardCornerRadius="200dp"
        app:cardElevation="0dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="25dp">


                <androidx.cardview.widget.CardView
                    android:id="@+id/cart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/title"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="-24dp"
                    android:layout_marginRight="16dp"
                    app:cardBackgroundColor="@color/colorcardbg"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/spinner"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/edit_text_background"
                                android:drawableRight="@drawable/ic_arrow_drop_down_white"
                                android:drawablePadding="-30dp"
                                android:gravity="center"
                                android:maxLines="1"
                                android:paddingLeft="16dp"
                                android:paddingTop="8dp"
                                android:paddingRight="16dp"
                                android:paddingBottom="8dp"
                                android:text="نوع اقساط"
                                android:textColor="@android:color/primary_text_dark"
                                android:textColorHint="#80FFFFFF"
                                android:textSize="13dp">

                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="8dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:layout_marginRight="8dp"
                                    android:layout_marginBottom="5dp"
                                    android:drawableRight="@drawable/ic_arrow_downward_black_24dp"
                                    android:drawablePadding="10dp"
                                    android:text="دریافت کننده"
                                    android:textColor="@color/mdtp_white" />

                                <EditText
                                    android:id="@+id/recaiver"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/edit_text_background"
                                    android:gravity="center|start"
                                    android:hint="عنوان جدبد خود را وارد کنید"
                                    android:maxLines="1"
                                    android:paddingLeft="16dp"
                                    android:paddingTop="8dp"
                                    android:paddingRight="16dp"
                                    android:paddingBottom="8dp"
                                    android:textColor="@android:color/primary_text_dark"
                                    android:textColorHint="#80FFFFFF"
                                    android:textSize="10dp" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="8dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:layout_marginRight="8dp"
                                    android:layout_marginBottom="5dp"
                                    android:drawableRight="@drawable/ic_account_balance_black_24dp"
                                    android:drawablePadding="10dp"
                                    android:text="شماره حساب"
                                    android:textColor="@color/mdtp_white" />

                                <EditText
                                    android:id="@+id/numberPay"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/edit_text_background"
                                    android:gravity="center|start"
                                    android:hint="عنوان جدبد خود را وارد کنید"
                                    android:inputType="number"
                                    android:maxLines="1"
                                    android:paddingLeft="16dp"
                                    android:paddingTop="8dp"
                                    android:paddingRight="16dp"
                                    android:paddingBottom="8dp"
                                    android:textColor="@android:color/primary_text_dark"
                                    android:textColorHint="#80FFFFFF"
                                    android:textSize="10dp">

                                </EditText>
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="18dp"
                            android:layout_weight="1"
                            android:text="نحوه یادآوری"
                            android:textColor="@color/colorwhite"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="40dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="8dp">

                            <carbon.widget.CheckBox
                                android:id="@+id/notify"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@null"
                                android:checked="true"
                                android:drawablePadding="@dimen/carbon_grid8"
                                android:text="با اعلان برنامه"
                                android:textColor="@color/colorwhite"
                                app:carbon_fontPath="@string/iransans"
                                app:carbon_tint="@color/colorblue" />

                            <carbon.widget.CheckBox
                                android:id="@+id/sms"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@null"
                                android:drawablePadding="@dimen/carbon_grid8"
                                android:text="با پیامک"
                                android:textColor="@color/colorwhite"
                                app:carbon_fontPath="@string/iransans"
                                app:carbon_tint="@color/colorblue" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <carbon.widget.TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="0dp"
                    android:background="@color/colorBGMain"
                    android:gravity="center"
                    android:paddingLeft="14dp"
                    android:paddingTop="8dp"
                    android:paddingRight="14dp"
                    android:paddingBottom="8dp"
                    android:text="اقساط و معوقات"
                    android:textColor="@color/colorgold"
                    app:carbon_cornerRadius="50dp"
                    app:carbon_elevation="0dp"
                    app:cardBackgroundColor="@color/colorBGMain"
                    app:cardCornerRadius="20dp"
                    app:strokeColor="@color/colorgold"
                    app:strokeWidth="1dp" />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/linControl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:focusable="true"
            app:cardBackgroundColor="@color/colorcardbg"
            app:cardCornerRadius="18dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"

                    android:src="@drawable/ic_keyboard_arrow_left_blue_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="ادامه"
                    android:textColor="@color/colorblue"
                    android:textStyle="bold" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/previous"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/colorcardbg"
            app:cardCornerRadius="18dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="قبلی"
                    android:textColor="@color/colorblue"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_keyboard_arrow_right_blue_24dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</RelativeLayout>