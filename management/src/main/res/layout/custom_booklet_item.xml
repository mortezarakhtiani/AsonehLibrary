<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:padding="@dimen/carbon_grid8"
        android:layout_marginRight="20dp"
        android:background="@drawable/tarakonesh"
        android:gravity="right"
        android:orientation="horizontal">



        <carbon.widget.LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="right|center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:text="4500 ت"
                android:textColor="@color/carbon_green_a700"
                android:id="@+id/price"
                android:layout_height="wrap_content" />
            <carbon.widget.LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                app:carbon_cornerRadius="@dimen/carbon_grid8"
                android:background="@color/colorBGMain"
                android:layout_margin="@dimen/carbon_grid8"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="زمان هشدار"
                    android:textColor="@color/colorgolddark"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/time"
                    android:text="8:20"
                    android:textColor="@color/colorblue"
                    android:layout_height="wrap_content" />
            </carbon.widget.LinearLayout>



        </carbon.widget.LinearLayout>
        <carbon.widget.LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp"
            app:carbon_cornerRadius="@dimen/carbon_grid8"
            android:background="@color/colorBGMain"
            android:layout_margin="@dimen/carbon_grid8"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="12"
                android:textSize="24sp"
                android:id="@+id/day"
                android:includeFontPadding="false"
                android:textColor="@color/colorgold"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="اردیبهشت"
                android:layout_marginTop="-12dp"
                android:textColor="@color/colorblue"
                android:id="@+id/month"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="98"
                android:textColor="@color/colorgolddark"
                android:id="@+id/year"
                android:layout_height="wrap_content" />
        </carbon.widget.LinearLayout>

    </LinearLayout>

    <carbon.widget.ImageView
        android:layout_width="32dp"
        android:id="@+id/icon"
        android:clickable="true"
        android:focusable="true"
        app:carbon_rippleColor="@color/carbon_red_a700"
        app:carbon_cornerRadius="50dp"
        android:layout_alignParentRight="true"
        android:background="@color/colorcardbg"
        app:carbon_stroke="@color/colorBGMain"
        app:carbon_strokeWidth="2dp"
        android:layout_height="32dp"
        android:padding="@dimen/carbon_grid8"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_close_red_24dp"
        android:layout_alignParentEnd="true" />
</RelativeLayout>